@import '../../.cache/wal/colors-waybar.css';

/* waybar area/group colors */

@define-color apps	       rgba(0, 0, 0, 0.6);
@define-color quicklinks   rgba(0, 0, 0, 0.4);
@define-color workspaces   rgba(0, 0, 0, 0.6);
@define-color taskbar      rgba(0, 0, 0, 0.4);
@define-color clock        @foreground;
@define-color misc         rgba(0, 0, 0, 0.4);
@define-color timer        rgba(0, 0, 0, 0.4);
@define-color devices      rgba(0, 0, 0, 0.6);
@define-color system       rgba(0, 0, 0, 0.4);
@define-color workspace_fg @foreground;
@define-color act_wrk_fg   @foreground;
@define-color use_wrk_fg   @color5;
@define-color workspace_bg rgba(0, 0, 0, 0.6);
@define-color act_wrk_bg   rgba(255, 255, 255, 0.1);
@define-color taskbar_bg   rgba(255, 255, 255, 0.2);
@define-color updates      #a3be8c;

/* General */

* {
  font-family: "{{ .defaultFont }}";
  font-weight: bold;
  font-size: 12px;
  min-height: 16px;
}

window#waybar {
  color: @foreground;
  background: transparent;
}

tooltip {
  background: @background;
  color: @foreground;
  border-radius: 7px;
  border-width: 0px;
}

/* Workspaces */

#workspaces {
  padding: 4px 10px;
}

#workspaces button:hover {}

#workspaces button.active {
  color: @act_wrk_fg;
  background: @act_wrk_bg;
  border: none;
  padding: 1px 2px;
  margin: 1px 4px;
  transition: all 0.3s ease-in-out;
}

#workspaces button {
  color: @workspace_fg;
  background: @workspace_bg;
  padding: 1px 2px;
  margin: 1px 4px;
  transition: all 0.3s ease-in-out;
}

#workspaces button:not(.empty):not(.active) {
  color: @use_wrk_fg;
  padding: 1px 2px;
  margin: 1px 4px;
}

/* Taskbar */

#taskbar {
  padding: 4px 10px;
}

#taskbar button {
  padding: 1px 4px;
  margin: 0px 4px;
}

#taskbar button.active {
  background: @taskbar_bg;
  border-radius: 5px;
  transition: all 0.3s ease-in-out;
}

#taskbar button:hover {
  border-radius: 5px;
  transition: all 0.3s ease-in-out;
}

/* Modules */

#clock {
  font-weight: bold;
  font-size: 14px;
  color: @clock;
  padding: 2px 10px 0px 10px;
  opacity: 1;
}

#custom-timer {
  padding: 2px 10px 0px 10px;
  min-width: 5px;
}

/* common padding and margin */
#custom-updates, #custom-power,
#bluetooth, #wireplumber, #network,
#custom-misc,
#custom-filemanager, #custom-browser, #custom-terminal, #custom-editor,
#custom-appmenu, #quicklinks, #window, #misc, #devices, #system {
  padding: 0px 10px;
}


/* edges */
#l-apps, #r-apps,
#l-quicklinks,
#l-workspaces,
#l-taskbar, #r-taskbar,
#l-misc,
#l-timer,
#l-devices, #r-devices,
#l-system {
  background: transparent;
  min-height: 0px
}

/* apps */
#custom-appmenu {
  background: @apps;
  font-size: 22px;
}

/* quicklinks */
#l-quicklinks {
  border-left: 15px solid @apps;
  border-bottom: 30px solid @quicklinks;
  margin-left: 0;
}

#quicklinks {
  background: @quicklinks;
}

/* workspaces */
#l-workspaces {
  border-left: 15px solid @quicklinks;
  border-bottom: 30px solid @workspaces;
  margin-left: 0;
}

#workspaces {
  background: @workspaces;
}

/* taskbar */
#l-taskbar {
  border-left: 15px solid @workspaces;
  border-bottom: 30px solid @taskbar;
  margin-left: 0;
}

#r-taskbar {
  border-left: 15px solid @taskbar;
  border-bottom: 30px solid transparent;
  margin-left: 0;
}

#taskbar {
  background: @taskbar;
}

/* misc */
#l-misc {
  border-left: 15px solid transparent;
  border-bottom: 30px solid @misc;
  margin-left: 0;
}

#misc {
  background: @misc;
}

/* devices */
#l-devices {
  border-left: 15px solid @misc;
  border-bottom: 30px solid @devices;
  margin-left: 0;
}

#devices {
  background: @devices;
}

/* system */
#l-system {
  border-left: 15px solid @devices;
  border-bottom: 30px solid @system;
  margin-right: 0;
}

#system {
  background: @system;
}
