	tray_output primary
	separator_symbol " "
	font pango:Fira Mono 10.5
	colors {
		background #2e3440
		statusline #eff1f5
		separator #323232
		focused_workspace #a3be8c #65737e #eff1f5
		active_workspace #4f5b66 #5f676a #eff1f5
		inactive_workspace #4f5b66 #4f5b66 #a7adba
		urgent_workspace #bf616a #65737e #eff1f5
	}
}

